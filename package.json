{
  "name": "scrum-poker-fire",
  "version": "1.0.0",
  "description": "Front-End for the ScrumPokerFire application.",
  "author": "Thfona",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ng serve --port 4500",
    "build": "ng build --configuration development",
    "build:prod": "ng build --configuration production",
    "deploy": "firebase deploy",
    "test": "ng test",
    "lint": "eslint ./src && npm run prettier",
    "lint:fix": "eslint ./src --fix && npm run prettier:fix",
    "prettier": "prettier --config ./.prettierrc --check \"./**/*{.ts,.js,.json,.css,.scss}\"",
    "prettier:fix": "prettier --config ./.prettierrc --check \"./**/*{.ts,.js,.json,.css,.scss}\" --write"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@angular/animations": "~13.1.3",
    "@angular/cdk": "~13.1.3",
    "@angular/common": "~13.1.3",
    "@angular/compiler": "~13.1.3",
    "@angular/core": "~13.1.3",
    "@angular/fire": "7.2.0",
    "@angular/forms": "~13.1.3",
    "@angular/material": "~13.1.3",
    "@angular/platform-browser": "~13.1.3",
    "@angular/platform-browser-dynamic": "~13.1.3",
    "@angular/router": "~13.1.3",
    "@ngneat/transloco": "3.1.2",
    "@ngneat/transloco-locale": "3.0.1",
    "@uiowa/digit-only": "3.2.0",
    "firebase": "9.6.4",
    "ngx-progressbar": "7.0.0",
    "rxjs": "~7.4.0",
    "tslib": "2.3.1",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "~0.1301.4",
    "@angular-devkit/build-angular": "~13.1.4",
    "@angular/cli": "~13.1.4",
    "@angular/compiler-cli": "~13.1.3",
    "@types/jasmine": "3.10.3",
    "@types/node": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "eslint": "8.7.0",
    "firebase-tools": "10.1.2",
    "jasmine-core": "4.0.0",
    "karma": "6.3.11",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage": "2.1.0",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.7.0",
    "pre-commit": "1.2.2",
    "prettier": "2.5.1",
    "typescript": "~4.4.4"
  }
}
